<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.grendel.waves"
      android:versionCode="4" android:versionName="1.3">
    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="false" android:testOnly="false">
        <activity android:name=".main"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".playGame"
                  android:label="@string/playgame">
            <intent-filter>
                <action android:name="com.grendel.waves.PLAYGAME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".highScores"
                  android:label="@string/highscores">
            <intent-filter>
                <action android:name="com.grendel.waves.HIGHSCORES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".options"
                  android:label="@string/options">
            <intent-filter>
                <action android:name="com.grendel.waves.OPTIONS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".instructions" android:label="@string/instructions">
            <intent-filter>
                <action android:name="com.grendel.waves.INSTRUCTIONS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>
</manifest>